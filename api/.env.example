# API Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration (Required)
SUPABASE_URL="https://your-project.supabase.co"       # Your Supabase project URL
SUPABASE_ANON_KEY="your_supabase_anon_key"           # Supabase anonymous/public key for client-side operations
SUPABASE_SERVICE_KEY="your_supabase_service_key"     # Supabase service role key for server-side operations (keep secret!)

# JWT and Security Configuration
JWT_SECRET="your_jwt_secret_here"                     # Optional: Override default JWT secret (Supabase handles this by default)
ENCRYPTION_MASTER_KEY="your_encryption_key_here"      # Optional: For encrypting sensitive data at rest

# API Server Configuration
API_PORT=8080                                         # Port for the API server (default: 8080)
NODE_ENV="development"                                # Environment: development, production, test

# Frontend Configuration (for CORS)
FRONTEND_URL="http://localhost:3000"                  # Frontend URL for CORS configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"  # Comma-separated list of allowed origins

# Security Headers Configuration
ENABLE_HELMET=true                                    # Enable helmet security headers
ENABLE_RATE_LIMIT=true                               # Enable rate limiting
RATE_LIMIT_WINDOW_MS=900000                          # Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_MAX_REQUESTS=100                          # Maximum requests per window

# Logging Configuration
LOG_LEVEL="info"                                     # Log level: error, warn, info, debug
LOG_FORMAT="json"                                    # Log format: json, pretty

# Email Configuration (for auth emails)
SMTP_HOST="smtp.example.com"                         # SMTP server host
SMTP_PORT=587                                        # SMTP server port
SMTP_SECURE=false                                    # Use TLS/SSL
SMTP_USER="your_smtp_user"                          # SMTP username
SMTP_PASS="your_smtp_password"                      # SMTP password
EMAIL_FROM="noreply@taskmaster.com"                 # From email address

# Session Configuration
SESSION_TIMEOUT=3600                                 # Session timeout in seconds (1 hour)
REFRESH_TOKEN_TIMEOUT=604800                        # Refresh token timeout in seconds (7 days)

# Feature Flags
ENABLE_SIGNUP=true                                   # Enable user registration
ENABLE_PASSWORD_RESET=true                          # Enable password reset functionality
ENABLE_ACCOUNT_DELETION=true                        # Enable account deletion
ENABLE_TWO_FACTOR_AUTH=false                       # Enable 2FA (future feature)

# API Keys for AI Services (Required for task generation)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"     # Required for Claude integration
OPENAI_API_KEY="your_openai_api_key_here"          # Optional for OpenAI models
GOOGLE_API_KEY="your_google_api_key_here"          # Optional for Google Gemini models
PERPLEXITY_API_KEY="your_perplexity_api_key_here"  # Optional for Perplexity models
XAI_API_KEY="your_xai_api_key_here"                # Optional for xAI models
OPENROUTER_API_KEY="your_openrouter_api_key_here"  # Optional for OpenRouter models